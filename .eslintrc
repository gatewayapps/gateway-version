{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel",
    "promise",
    "node"
  ],
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "object-curly-spacing" : [2, "always"],
    "node/no-deprecated-api" : 1,
    "node/no-missing-import" : 2,
    "node/no-missing-require" : 2
  }
}
